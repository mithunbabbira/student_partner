<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentsPartner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Material color attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar and Navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.StudentsPartner.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.StudentsPartner.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StudentsPartner.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StudentsPartner.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.StudentsPartner.Button</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StudentsPartner.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudentsPartner.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudentsPartner.LargeComponent</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.StudentsPartner.Button</item>
        <item name="toolbarStyle">@style/Widget.StudentsPartner.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.StudentsPartner.BottomNavigation</item>
        <item name="materialCardViewStyle">@style/Widget.StudentsPartner.CardView</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.StudentsPartner.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.StudentsPartner.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.StudentsPartner.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StudentsPartner.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.StudentsPartner.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.StudentsPartner.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.StudentsPartner.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.StudentsPartner.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Component Styles -->
    <style name="Widget.StudentsPartner.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.StudentsPartner.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.StudentsPartner.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.StudentsPartner.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="itemIconTint">@color/text_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
    </style>

    <style name="Widget.StudentsPartner.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <style name="Theme.StudentsPartner.NoActionBar" parent="Theme.StudentsPartner">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>