<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CircularImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style for circular profile image -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources> 